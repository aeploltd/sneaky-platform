{
  "name": "sneaky-database",
  "version": "1.0.0",
  "description": "Database management and migrations for Sneaky Hosting Platform",
  "main": "index.js",
  "scripts": {
    "dev": "nodemon src/monitor.ts",
    "build": "tsc",
    "start": "node dist/monitor.js",
    "migrate": "cd ../sneaky-backend && npx prisma migrate dev",
    "seed": "cd ../sneaky-backend && npx prisma db seed",
    "reset": "cd ../sneaky-backend && npx prisma migrate reset",
    "studio": "cd ../sneaky-backend && npx prisma studio",
    "backup": "node scripts/backup.js",
    "restore": "node scripts/restore.js"
  },
  "dependencies": {
    "pg": "^8.11.3",
    "redis": "^4.6.10",
    "winston": "^3.11.0",
    "node-cron": "^3.0.3"
  },
  "devDependencies": {
    "@types/node": "^20.10.5",
    "@types/pg": "^8.10.9",
    "typescript": "^5.3.3",
    "nodemon": "^3.0.2",
    "ts-node": "^10.9.2"
  }
}